@model prjMvcCoreDemo.Models.TProduct

@{
    ViewData["Title"] = "AddToCart";
}

<h1>加入購物車</h1>

<h4>請輸入數量</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="AddToCart">
            <div class="form-group">
                <input type="hidden" name="txtFid" value="@Model.FId" />
                <div class="col-md-10">
                    數量<br>
                    @Html.TextBox("txtCount", "1", new { htmlAttributes = new { @class = "form-control" } })
                </div>
            </div>
            <div class="form-group">
                <input type="submit" value="購買" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="List">回到商品列表</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
